-- 학과 종류 검색
SELECT  DISTINCT STU_DEPT FROM TBL_STU ;

SELECT * FROM tbl_stu;
-- 각 학과별 학생 수 조회
SELECT DISTINCT STU_DEPT , COUNT(STU_ID)
FROM TBL_STU ts 
GROUP BY STU_DEPT;

SELECT * FROM tbl_stu;

-- 각 학과별 평균나이 조회
SELECT DISTINCT STU_DEPT , AVG(STU_AGE)
FROM TBL_STU ts 
GROUP BY STU_DEPT;



SELECT * FROM tbl_stu;

-- 학과별로 30세 이상인 학생 전체조회
SELECT 
FROM TBL_STU 
WHERE STU_AGE >= 30;



SELECT * FROM tbl_stu;
-- 학생 이름이 김으로 시작하거나 이로 시작하는 학생들의 학과별 수 조회
SELECT DISTINCT STU_DEPT, COUNT(STU_ID) 
FROM TBL_STU ts
WHERE (STU_NAME = '김%'OR STU_NAME = '이%');



